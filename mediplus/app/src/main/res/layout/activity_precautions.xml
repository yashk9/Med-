<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Precautions">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/main_toolbar" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:padding="25dp"
                android:weightSum="8">

                <LinearLayout
                    android:id="@+id/mask"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animationViewMask"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/mask" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:text="Make wearing a mask a normal part of being around other people. Make sure it covers both your nose, mouth and chin."
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hands"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@id/mask"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animationViewHands"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/hands" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:text="Regularly and thoroughly clean your hands with an alcohol-based hand rub or wash them with soap and water."
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/avoids"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@id/hands"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animationViewSneeze"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/sneeze" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:text="Avoid touching your eyes, nose and mouth. Cover your mouth and nose with your bent elbow or tissue when you cough or sneeze"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/distancing"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@id/avoids"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animationViewDistancing"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/distancing" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:text="Maintain at least a 2-metre distance between yourself and others to reduce your risk of infection when they cough, sneeze or speak. "
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/three_c"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@id/distancing"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animationViewThreeC"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/crowd" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:text="Avoid the 3Cs: spaces that are closed, crowded or involve close contact."
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/clean"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@id/three_c"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animationViewClean"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/clean" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:text="Clean and disinfect surfaces frequently especially those which are regularly touched, such as door handles, faucets and phone screens."
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/symptoms"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@id/clean"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animationViewSymptoms"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/symptoms" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:text="Know the full range of symptoms of COVID-19. The most common symptoms of COVID-19 are fever, dry cough, and tiredness."
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/isolation"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@id/symptoms"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animationViewIsolation"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/isolation" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:text="Stay home and self-isolate even if you have minor symptoms such as cough, headache, mild fever, until you recover."
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animationViewAvoids"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-350dp"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/avoid"
                        app:lottie_speed="2000" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/animationViewAvoids"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="-350dp">

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:src="@drawable/who1" />

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:src="@drawable/who2" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:src="@drawable/who3" />

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:src="@drawable/who4" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#ffffff">

        <include layout="@layout/main_nav_drawer_patient" />

    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>